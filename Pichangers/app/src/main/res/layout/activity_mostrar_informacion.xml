<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pe.edu.ulima.pichangers.mostrarinformacion.MostrarInformacionActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ball"
         />
    <TextView
        android:id="@+id/tviEquipoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo 1"
        android:textSize="25dp"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView4"

        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/iviEquipoImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/alumno_fake"
        android:layout_below="@+id/tviEquipoNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
         />

    <TextView
        android:id="@+id/tviPartidosGanados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partidos ganados"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:id="@+id/tviPartidosPerdidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partidos perdidos"
        android:layout_below="@+id/tviPartidosGanados"
        android:layout_alignLeft="@+id/tviPartidosGanados"
        android:layout_alignStart="@+id/tviPartidosGanados"
        android:layout_marginTop="10dp" />

</RelativeLayout>
